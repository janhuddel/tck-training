{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,
    "rootDir": "src",
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "__tests__/excel-parser.test.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
